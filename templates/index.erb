<h2></h2>
<ul class="scene-list">
  <% scenes.each do |scene| %>
    <li>
      <p>ID: <%= scene.id %></p>
      <p>Parent ID: <%= scene.parent_id %></p>
      <p><strong><%= escape(scene.title) %></strong></p>
      <p><%= escape(scene.body) %></p>
      <p>
        <form action="/scenes/<%= scene.id %>/delete" method="post">
          <input class="button" type="submit" value="Delete">
        </form>
      </p>
    </li>
  <% end %>
</ol>